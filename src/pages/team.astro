---
import HeroNavBar from "../components/HeroNavBar.jsx";
import Footer from "../components/Footer.jsx";
import FloatingElements from "../components/FloatingElements.jsx";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Meet Our Team | LeadOctave</title>
        <meta
            name="description"
            content="Meet the passionate team behind LeadOctave, dedicated to transforming organizational leadership through proven systems and frameworks."
        />
        <link rel="icon" type="image/png" href="/image/leadoctave-logo.png" />
    </head>
    <body class="antialiased bg-gray-50">
        <FloatingElements client:load />
        <HeroNavBar client:load />

        <main class="pt-32 pb-20 px-6">
            <!-- Page Header -->
            <section class="max-w-6xl mx-auto text-center mb-20">
                <div
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[#C19A6B]/10 rounded-full mb-6"
                >
                    <span
                        class="text-sm font-bold text-[#C19A6B] uppercase tracking-wider"
                        >Our Team</span
                    >
                </div>
                <h1
                    class="text-5xl md:text-6xl lg:text-7xl font-serif font-bold text-[#05101E] mb-8 leading-tight"
                >
                    Meet the People Behind <br />
                    <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-[#C19A6B] to-[#A07855]"
                        >LeadOctave</span
                    >
                </h1>
                <p
                    class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed"
                >
                    A dedicated team of leadership experts, strategists, and
                    organizational architects committed to transforming how
                    companies lead.
                </p>
            </section>

            <!-- Founder Section -->
            <section class="max-w-6xl mx-auto mb-32">
                <div class="text-center mb-12">
                    <h2
                        class="text-4xl font-serif font-bold text-[#05101E] mb-4"
                    >
                        Our Founder
                    </h2>
                    <p class="text-xl text-gray-600">
                        The visionary behind the Octave Model™
                    </p>
                </div>

                <div class="bg-white rounded-3xl shadow-2xl overflow-hidden">
                    <div class="grid md:grid-cols-2 gap-0">
                        <!-- Image -->
                        <div class="relative h-[500px] md:h-auto">
                            <img
                                src="https://images.unsplash.com/photo-1560250097-0b93528c311a?w=800&h=1000&fit=crop&q=80"
                                alt="Joshua Tolofari"
                                class="w-full h-full object-cover"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-[#05101E]/60 to-transparent"
                            >
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-10 md:p-12 flex flex-col justify-center">
                            <h3
                                class="text-4xl font-serif font-bold text-[#05101E] mb-2"
                            >
                                Joshua Tolofari
                            </h3>
                            <p
                                class="text-xl text-[#C19A6B] font-semibold mb-6"
                            >
                                Founder & Chief Leadership Architect
                            </p>

                            <div
                                class="space-y-4 text-gray-600 leading-relaxed mb-8"
                            >
                                <p>
                                    With over 15 years of experience in
                                    organizational development and strategic
                                    leadership, Joshua has dedicated his career
                                    to solving one of business's most persistent
                                    challenges: how to build leadership that
                                    lasts.
                                </p>
                                <p>
                                    He developed the Octave Model™ after working
                                    with hundreds of organizations and
                                    discovering that most leadership failures
                                    weren't due to bad people, but bad systems.
                                </p>
                                <p>
                                    His approach combines proven frameworks with
                                    personalized strategies, helping leaders
                                    move from chaos to cadence through
                                    structures of trust, clarity, and
                                    sustainable execution.
                                </p>
                            </div>

                            <div class="space-y-3">
                                <div class="flex items-center gap-3">
                                    <div
                                        class="w-2 h-2 bg-[#C19A6B] rounded-full"
                                    >
                                    </div>
                                    <span class="text-gray-700"
                                        >15+ Years in Leadership Development</span
                                    >
                                </div>
                                <div class="flex items-center gap-3">
                                    <div
                                        class="w-2 h-2 bg-[#C19A6B] rounded-full"
                                    >
                                    </div>
                                    <span class="text-gray-700"
                                        >500+ Leaders Transformed</span
                                    >
                                </div>
                                <div class="flex items-center gap-3">
                                    <div
                                        class="w-2 h-2 bg-[#C19A6B] rounded-full"
                                    >
                                    </div>
                                    <span class="text-gray-700"
                                        >Creator of the Octave Model™</span
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Team Members Section -->
            <section class="max-w-6xl mx-auto mb-20">
                <div class="text-center mb-12">
                    <h2
                        class="text-4xl font-serif font-bold text-[#05101E] mb-4"
                    >
                        Our Team
                    </h2>
                    <p class="text-xl text-gray-600">
                        Expert professionals dedicated to your success
                    </p>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Team Member 1 -->
                    <div
                        class="bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300"
                    >
                        <div class="relative h-80">
                            <img
                                src="https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?w=800&h=600&fit=crop&q=80"
                                alt="Sarah Mitchell"
                                class="w-full h-full object-cover"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-[#05101E]/70 to-transparent"
                            >
                            </div>
                            <div class="absolute bottom-6 left-6 text-white">
                                <h3 class="text-2xl font-serif font-bold mb-1">
                                    Sarah Mitchell
                                </h3>
                                <p class="text-[#C19A6B] font-semibold">
                                    Senior Leadership Consultant
                                </p>
                            </div>
                        </div>
                        <div class="p-8">
                            <p class="text-gray-600 leading-relaxed mb-6">
                                Sarah specializes in organizational culture
                                transformation and team alignment. With 10+
                                years in change management, she helps companies
                                build sustainable leadership practices that
                                drive performance.
                            </p>
                            <div class="space-y-2">
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span
                                        >Culture & Change Management Expert</span
                                    >
                                </div>
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span>MBA, Organizational Psychology</span>
                                </div>
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span>200+ Teams Aligned</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Team Member 2 -->
                    <div
                        class="bg-white rounded-3xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-300"
                    >
                        <div class="relative h-80">
                            <img
                                src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=800&h=600&fit=crop&q=80"
                                alt="Marcus Chen"
                                class="w-full h-full object-cover"
                            />
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-[#05101E]/70 to-transparent"
                            >
                            </div>
                            <div class="absolute bottom-6 left-6 text-white">
                                <h3 class="text-2xl font-serif font-bold mb-1">
                                    Marcus Chen
                                </h3>
                                <p class="text-[#C19A6B] font-semibold">
                                    Strategic Systems Architect
                                </p>
                            </div>
                        </div>
                        <div class="p-8">
                            <p class="text-gray-600 leading-relaxed mb-6">
                                Marcus brings a data-driven approach to
                                leadership development, combining systems
                                thinking with practical execution. He has helped
                                over 100 organizations build scalable leadership
                                frameworks.
                            </p>
                            <div class="space-y-2">
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span>Systems Design & Strategy</span>
                                </div>
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span>Former McKinsey Consultant</span>
                                </div>
                                <div
                                    class="flex items-center gap-2 text-sm text-gray-700"
                                >
                                    <svg
                                        class="w-5 h-5 text-[#C19A6B]"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                        ></path>
                                    </svg>
                                    <span>100+ Systems Implemented</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Join Us CTA -->
            <section class="max-w-5xl mx-auto">
                <div
                    class="bg-gradient-to-r from-[#05101E] to-[#0A1F3D] p-12 md:p-16 rounded-3xl text-center text-white"
                >
                    <h2 class="text-4xl font-serif font-bold mb-6">
                        Ready to Transform Your Leadership?
                    </h2>
                    <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
                        Work with our team to build leadership systems that
                        create lasting impact in your organization.
                    </p>
                    <div class="flex flex-wrap gap-4 justify-center">
                        <a
                            href="/contact"
                            class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#C19A6B] to-[#A07855] text-white font-bold rounded-xl hover:shadow-xl transition-all duration-300"
                        >
                            Schedule a Consultation
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                            </svg>
                        </a>
                        <a
                            href="/about"
                            class="inline-flex items-center gap-2 px-8 py-4 border-2 border-white text-white font-bold rounded-xl hover:bg-white hover:text-[#05101E] transition-all duration-300"
                        >
                            Learn More About Us
                        </a>
                    </div>
                </div>
            </section>
        </main>

        <Footer client:load />
    </body>
</html>
