---
import HeroNavBar from "../components/HeroNavBar.jsx";
import Footer from "../components/Footer.jsx";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Blog - LeadOctave</title>
        <link rel="icon" type="image/png" href="/image/leadoctave-logo.png" />
    </head>
    <body class="antialiased bg-gray-50">
        <HeroNavBar client:load />

        <main class="pt-32 pb-20 px-6 min-h-screen">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-5xl font-serif font-bold text-[#05101E] mb-6">
                    Latest Insights
                </h1>
                <p class="text-xl text-gray-600 mb-12">
                    Coming Soon. We are crafting high-impact content for you.
                </p>
                <div
                    class="p-12 bg-white rounded-3xl shadow-xl border border-gray-100"
                >
                    <div
                        class="w-20 h-20 bg-[#D2B48C]/10 rounded-full flex items-center justify-center mx-auto mb-6"
                    >
                        <span class="text-4xl">✍️</span>
                    </div>
                    <h2 class="text-2xl font-bold text-[#05101E] mb-4">
                        Our Blog is Under Construction
                    </h2>
                    <p class="text-gray-600">
                        Check back later for articles on leadership, systems,
                        and organizational health.
                    </p>
                    <a
                        href="/"
                        class="inline-block mt-8 px-8 py-3 bg-[#05101E] text-white rounded-xl font-bold hover:bg-[#D2B48C] transition-colors"
                    >
                        Return Home
                    </a>
                </div>
            </div>
        </main>

        <Footer client:load />
    </body>
</html>
